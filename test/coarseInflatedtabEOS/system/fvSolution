FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    "(rho|rhoU|rhoE|alpha)"
    {
        solver          diagonal;
    }
    "(rho|rhoU|rhoE|alpha)Final"
    {
        solver          diagonal;
    }
    "G.*"
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance       1e-04;
        relTol          0.1;
    }
}

PIMPLE
{
    momentumPredictor true;
    nOuterCorrectors  2;
    nCorrectors     3;
    nNonOrthogonalCorrectors 1;
}


