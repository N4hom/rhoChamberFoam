FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme          Kurganov;

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;

    div(tauMC)      Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;

    reconstruct(rho) Minmod;
    reconstruct(U)  Minmod;
    reconstruct(T)  Minmod;
    reconstruct(p)  Minmod;
    reconstruct(e)  Minmod;
    reconstruct(c)  Minmod;
}

snGradSchemes
{
    default         corrected;
}


